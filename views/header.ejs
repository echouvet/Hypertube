<body>
<div class="page-header text-center" id="hideheader">
    <div class="container-fluid" style="padding: 0px;">
        <div class="jumbotron" style="margin-bottom: 0px; padding: 1rem;background: url('/img/header3.jpg'); background-position: bottom 0px; background-size: 100vw;">
            <% if (typeof profile != 'undefined') { %>
                <div class="col-10">
                  <h1 style="font-weight: bold; font-size: 70px; color:rgb(179, 0, 0);text-shadow: 16px 6px 10px rgb(77, 0, 0);"><i>Hypertube !</i></h1>
                  <p class="bloc"><b><%= __("Hypertube is the last project of the 42's web branch. We did it with nodeJS and Bootstrap. Have fun !") %></b></p>
                </div>
            <% } else { %>
                  <h1 style="font-weight: bold; font-size: 70px; color:rgb(179, 0, 0);text-shadow: 16px 6px 16px rgb(77, 0, 0);">Hypertube !</h1>
                  <p><b><%= __("Hypertube is the last project of the 42's web branch. We did it with nodeJS and Bootstrap. Have fun !") %> </b></p>
            <% } %>
        </div>
        <% if (typeof profile != 'undefined') { %>
            <div class="pic">
                <div class="pic" style="position:absolute; top:0.5rem; right: 10px; border-radius: 100px; width: 230px; height: 210px; z-index: 4;"></div>
            <a href="/profile"><img src=<%- profile.img %> class="propic" style="position:absolute; top:0.5rem; right: 20px; border-radius: 100px;z-index: 3;"></a>



                <div class="menu-pic bg-dark" style="position: absolute;top:218px; right: 33px; width: 180px; padding: 5px; padding-top:11px; padding-bottom:11px;">
                    <li><a class="menu-deroulant" href="/my_profile" style="text-decoration: none; color:white;"><%= __("My profile") %></a></li><hr/>
                    <li><a class="menu-deroulant" href="/other_profiles" style="text-decoration: none; color:white;"><%= __("Other profiles") %></a></li><hr/>
                    <li><a class="menu-deroulant" href="/logout" style="text-decoration: none; color:white;"><%= __("Logout") %></a></li>
                </div>
            </div>
    </div>
</div>
<nav class="navbar bg-dark">
    <div class="col-12" style="display: inline-flex;">
        <form class="form-inline" action="/index" method="post">
            <input class="form-control mr-2" type="text" placeholder="<%= __("Search..")  %>" name="query">
            <div class="adv-search" style="color:white;margin-right:4px;"><button class="btn btn-dark adv-search" type="submit" value="yts" name="srch"><%= __("Search on ")%><i style="color:red;">YTS</i></button><div id="hideadv">
            <div class="adv-search col-12" style="position:absolute;height:20px;width: 150px;"></div>
            <div class="search bg-dark" id="filter" style="position:absolute; top:45px; justify-content: center;min-width: 500px;">
                <div class="col text-left">
                    <h4><%= __("Sort") %></h4><hr style="margin:2px 2px 2px 2px;" />
                        <div class="left"><label for="downloads"><%= __("Downloads") %><input type="radio" id="downloads" name="sort" value="0" class="rdio"></label></div><br/>
                        <div class="left"><label for="likes"><%= __("Likes") %><input type="radio" id="likes" name="sort" value="1" class="rdio"></label></div><br/>
                        <div class="left"><label for="year"><%= __("Year") %><input type="radio" id="year" name="sort" value="2" class="rdio" style=""></label></div><br/>
                        <div class="left"><label for="date"><%= __("Date added") %><input type="radio" id="date" value="3" name="sort" class="rdio"></label></div><br/>
                        <div class="left"><label for="rating"><%= __("Rating") %><input type="radio" id="rating" value="4" name="sort" class="rdio"></label></div><br/>
                        <div class="left"><label for="peers"><%= __("Peers") %><input type="radio" id="peers" value="5" name="sort" class="rdio"></label></div><br/>
                        <div class="left"><label for="seeds"><%= __("Seeds") %><input type="radio" id="seeds" value="6" name="sort" class="rdio"></label></div>
                </div>
                <div class="col text-left">
                    <h4><%= __("Filter") %></h4><hr style="margin:2px 2px 2px 2px;" />
                    <div class="left"><%= __("Genres") %><select class="text-center margleft" id="genres" name=genres style="text-align-last:center;">
                        <option value="All" selected><%= __("All") %></option>
                        <option value="Action"><%= __("Action") %></option>
                        <option value="Thriller"><%= __("Thriller") %></option>
                        <option value="Adventure"><%= __("Adventure") %></option>
                        <option value="Crime"><%= __("Crime") %></option>
                        <option value="War"><%= __("War") %></option>
                        <option value="Romance"><%= __("Romance") %></option>
                        <option value="Horror"><%= __("Horror") %></option>
                        <option value="Mystery"><%= __("Mystery") %></option>
                        <option value="Fantasy"><%= __("Fantasy") %></option>
                        <option value="Animation"><%= __("Animation") %></option>
                        <option value="Sci-fi"><%= __("Sci-fi") %></option>
                    </select></div><br/>
                    <div class="left"><label for="filtrerating"><%= __("Minimum rating") %>
                    <input class="marg text-center" type="number" min="0" max="9" name="filtrerating" id="filtrerating" style="max-width: 40px; max-height: 20px;">
                    </label></div><br/>
                    <div class="left"><%= __("Quality") %><select class="text-center margleft" id="quality" name=quality style="text-align-last:center;">
                        <option value="All" selected><%= __("All") %></option>
                        <option value="720p">720p</option>
                        <option value="1080p">1080p</option>
                        <option value="3D">3D</option>
                    </select></div>
                </div>
            </div></div></div>
            <button class="btn btn-dark adv-search" type="submit" value="tpb" name="srch"><%= __("Search on ")%><i style="color:red;">ThePirateBays</i></button>
            <button class="btn btn-dark adv-search" type="submit" value="xto" name="srch"><%= __("Search on ")%><i style="color:red;">1337X</i></button>
           
        </form>
       
    </div>
</nav>
        <% } else { %>
        <nav class="navbar bg-dark">
    <div class="col-12" style="display: inline-flex;">
        <div>
    <a href="../login" class="btn btn-dark" style="text-decoration: none;"><%= __("Log In")%></a>
            <a href="../register" class="btn btn-dark" style="text-decoration: none;"><%= __("Register")%></a>
